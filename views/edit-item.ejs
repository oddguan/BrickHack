<%- include('./includes/head.ejs') %>
</head>

<body>
   <%- include('./includes/navigation.ejs') %>
    <div class="container">
        <main>
            <form class="mb-2" action="/edit-item" method="POST">
                <div class="form-group">
                    <label for="title">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter Title" value="<%= item.name %>" required>
                </div>
                <div class="form-group">
                    <label for="img">Image</label>
                    <input class="form-control" type="text" name="imageUrl" id="img" placeholder="Enter an image URL" value="<%= item.imageUrl %>" required>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" value="<%= item._id %>" name="itemId">
                <button class="btn btn-outline-primary btn-block" type="submit"><span class="h5">Edit Item</span></button>
            </form>
        </main>
    </div>
<%- include('./includes/end.ejs') %>