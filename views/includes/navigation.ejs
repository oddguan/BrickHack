<header>
  <nav class="navbar navbar-expand-sm navbar-dark bg-primary p-3 mb-3">
    <div class="container">
      <a href="/" class="navbar-brand">Favor</a>
      <button
        class="navbar-toggler"
        data-toggle="collapse"
        data-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if (isAuthenticated) { %>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/"
              >Item</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path === '/service' ? 'active' : '' %>"
              href="/service"
              >Service</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path === '/friends' ? 'active' : '' %>"
              href="/friends"
              >Friends/Neighbors</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path === '/history' ? 'active' : '' %>"
              href="/history"
              >History</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path === '/message' ? 'active' : '' %>"
              href="/message"
              >Message
            </a>
          </li>
          <% } %>
        </ul>

        <form class="form-inline ml-auto">
          <input
            type="text"
            class="form-control mr-2"
            placeholder="Search For Item"
          />
        </form>
        <ul class="navbar-nav ml-3">
          <% if (!isAuthenticated) { %>
          <li class="nav-item">
            <a
              class="nav-link <%= path === '/login' ? 'active' : '' %>"
              href="/login"
              >Login</a
            >
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="#">My Profile</a>
          </li>
          <li class="nav-item">
            <form id="logout" action="/logout" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <a class="nav-link" href="javascript:$('#logout').submit();">
                Logout
              </a>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>
