<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <main>
            <% if (prods.length > 0) { %>
                <div class="container row d-flex justify-content-around">
                    <% for (let product of prods) { %>
                        <div class="card m-3 text-center" style="flex-basis: 18rem;">
                            <img class="card-img-top p-2" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                            <div class="card-body">
                                <h1 class="card-title"><%= product.title %></h1>
                                <div class="card-text">
                                    <h2>$<%= product.price %></h2>
                                    <p><%= product.description %></p>
                                </div>
                                <a href="/products/<%= product._id %>" class="btn btn-outline-primary mb-3">Details</a>
                                <% if (isAuthenticated) { %>
                                <%- include('../includes/add-to-cart.ejs', {product}) %>
                                <% } %>    
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <h1>No Products Found!</h1>
            <% } %>
        </main>
    </div>
<%- include('../includes/end.ejs') %>